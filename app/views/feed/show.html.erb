<table>
<thead></thead>
  <tbody>
    <% @posts.each do |post| %>
      <% if post.author.service == "Vimeo" %>
        <tr>
          <td><iframe src="//player.vimeo.com/video/<%= post.url_id.to_s %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></td>
          <td><%= post.words %></td>
          <td><%= post.timestamp %></td>
        </tr>

      <% elsif post[:service] == "Twitter" %>
          <tr>
            <td><%= post[:user] %></td>
            <td><%= post[:content] %></td>
            <td><%= post[:timestamp] %> </td>
          </tr>
      <% else %>
        <tr>
          <td><%= post[:title] %></td>
          <td><%= post[:content] %></td>
          <td><%= post[:timestamp] %></td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
